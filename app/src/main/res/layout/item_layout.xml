<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_margin_tiny"
        android:layout_marginLeft="@dimen/layout_margin_smaller"
        android:layout_marginTop="@dimen/layout_margin_tiny"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:textColor="@color/color_text_normal"
        android:textSize="@dimen/text_size_normal" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_margin_tiny"
        android:layout_marginLeft="@dimen/layout_margin_smaller"
        android:layout_marginTop="@dimen/layout_margin_tiny"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:textColor="@color/color_text_normal"
        android:textSize="@dimen/text_size_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_toolbar_background">

        <Space
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    </LinearLayout>

</LinearLayout>